@model VM_VillaNumber
@{
  string Template = "Villa Number";
}
<div class="w-100 border-0 p-4">
  <div class="card-header bg-success bg-gradient ml-0 py-3">
    <div class="row">
      <div class="col-12 text-center">
        <h1 class="text-white py-2">Update @Template</h1>
      </div>
    </div>
  </div>
  <div class="card-body border p-2">
    <form method="post" class="row">
      <div class="form-floating py-1 col-md-6">
        <select asp-for="D.VillaId" class="form-select border shadow" asp-items="@Model.VillaList">
          <option disabled selected>--Select Villa--</option>
        </select>
        <label asp-for="D.VillaId" class="ms-2"></label>
        <span asp-validation-for="D.VillaId" class="text-danger"></span>
      </div>
      <div class="form-floating py-1 col-md-6">
        <input asp-for="D.Villa_Number" class="form-control border shadow" />
        <label asp-for="D.Villa_Number" class="ms-2"></label>
        <span asp-validation-for="D.Villa_Number" class="text-danger"></span>
      </div>
      <div class="form-floating py-1 col-md-6">
        <input asp-for="D.SpecialDetails" class="form-control border shadow" />
        <label asp-for="D.SpecialDetails" class="ms-2"></label>
        <span asp-validation-for="D.SpecialDetails" class="text-danger"></span>
      </div>
      <div class="col-12 mt-2">
        <div class="row">
          <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-success w-100">
              <i class="bi bi-check-circle"></i> Save
            </button>
          </div>
          <div class="col-6 col-md-3">
            <a asp-controller="VillaNumber" asp-action="Index" type="submit" class="btn btn-danger w-100">
              <i class="bi bi-x-circle"></i>
              Cancel
            </a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
@section Scripts {
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}